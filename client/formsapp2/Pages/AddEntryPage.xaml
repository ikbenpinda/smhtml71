<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="formsapp2.AddEntryPage">
	<ContentPage.Content>
		<StackLayout>
      <Label Text="Title:" FontSize="20"></Label>
			<Entry  x:Name="entr_EntryTitle"></Entry>
      <Label Text="Content:" FontSize="20"></Label>
			<Editor x:Name="entr_EntryContent" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"></Editor>
      <Label Text="Attachments"></Label>
      <ListView  x:Name ="listview_media">       
      </ListView>
			<Button Text="Add media" x:Name="btn_addImageToEntry"></Button>
			<Button Text="Add entry" x:Name="btn_addEntry"></Button>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
